<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_upper_border">

                <LinearLayout
                    android:id="@+id/profile_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/list_profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"
                        android:src="@drawable/img" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/personName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aparna Kamath"
                            android:textStyle="bold"
                            android:textColor="#123d5f"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/mobileNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 1234567890"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/leadTypeHot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:text="Hot Lead"
                    android:textSize="14sp"
                    android:textColor="#FA0303"
                    android:background="@drawable/text_bg_red"
                    app:drawableStartCompat="@drawable/fire"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/leadTypeCold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:text="Cold Lead"
                    android:textSize="14sp"
                    android:textColor="#16b7df"
                    android:background="@drawable/text_bg_aqua"
                    app:drawableStartCompat="@drawable/cold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/enquiryNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_ll"
                    android:layout_marginStart="10dp"
                    android:text="#729 - Enquiry of Park view Apartments"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/enquiryNo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Park view apartment"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="10dp"
                        android:textSize="13sp"
                        android:padding="5dp"
                        android:background="@drawable/text_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HSR Layout"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="10dp"
                        android:padding="5dp"
                        android:textSize="13sp"
                        android:background="@drawable/text_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 BHK"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="10dp"
                        android:padding="5dp"
                        android:textSize="13sp"
                        android:background="@drawable/text_bg"/>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_lower_border">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="High"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/dot_red"
                        android:background="@drawable/text_bg"/>

                    <TextView
                        android:id="@+id/recDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="In Progress"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/in_progress"
                        android:background="@drawable/text_bg"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/recLang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:text="Nikita Rao (You)"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/person_grey"
                    android:drawablePadding="3dp"/>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>